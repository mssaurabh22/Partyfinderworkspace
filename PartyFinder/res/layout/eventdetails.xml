<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/weight_header" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <com.partyfinder.CustomView.CustomFontSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="@string/eventdetail"
                    android:textColor="@color/layout_top_heading_color"
                    android:textSize="@dimen/All_screen_header_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#b2b2b2" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.54"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7" >

                <ImageView
                    android:id="@+id/EventPicImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/eeeeeeeeeee" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" >

                <RelativeLayout
                    android:id="@+id/event_imageside_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/event_image" >

                    <LinearLayout
                        android:id="@+id/reserve_table_layoutx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1" >

                        <LinearLayout
                            android:id="@+id/reserve_table_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_imageview_layout_height"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_weight="0.25"
                            android:background="#e55063"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center" >

                                <ImageView
                                    android:id="@+id/imageView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/reservetable" />

                                <com.partyfinder.CustomView.CustomFontSemiBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imageView1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/event_detail_text4__margin_top"
                                    android:text="@string/reserveTable"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/reservetable_text_size" />
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="0.5px"
                            android:layout_below="@+id/reserve_table_layout"
                            android:background="@drawable/rightmenudivider" />

                        <LinearLayout
                            android:id="@+id/purchase_tickets_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_imageview_layout_height"
                            android:layout_below="@+id/divider1"
                            android:layout_weight="0.25"
                            android:background="#e55063"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center" >

                                <ImageView
                                    android:id="@+id/puschaseTicketImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/purchaseticket" />

                                <com.partyfinder.CustomView.CustomFontSemiBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/puschaseTicketImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/event_detail_text4__margin_top"
                                    android:text="@string/purchaseTicket"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/reservetable_text_size" />
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/divider2"
                            android:layout_width="match_parent"
                            android:layout_height="0.5px"
                            android:layout_below="@+id/purchase_tickets_layout"
                            android:background="@drawable/rightmenudivider" />

                        <LinearLayout
                            android:id="@+id/guest_list_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_imageview_layout_height"
                            android:layout_below="@+id/divider2"
                            android:layout_weight="0.25"
                            android:background="#e55063"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center" >

                                <ImageView
                                    android:id="@+id/btn_guestlist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/guestlist" />

                                <com.partyfinder.CustomView.CustomFontSemiBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/btn_guestlist"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/event_detail_text4__margin_top"
                                    android:text="@string/guestlist"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/reservetable_text_size" />
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/divider3"
                            android:layout_width="match_parent"
                            android:layout_height="0.5px"
                            android:layout_below="@+id/guest_list_layout"
                            android:background="@drawable/rightmenudivider" />

                        <LinearLayout
                            android:id="@+id/recommended"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/all_imageview_layout_height"
                            android:layout_below="@+id/divider3"
                            android:layout_weight="0.25"
                            android:background="#e55063"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/btn_recommend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/recommend" />

                                <com.partyfinder.CustomView.CustomFontSemiBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/btn_recommend"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/event_detail_text4__margin_top"
                                    android:text="@string/recommendlist"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/reservetable_text_size" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- android:layout_alignLeft="@+id/imageView1" -->

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.31" >

                <LinearLayout
                    android:id="@+id/back_btn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/detailbackbg"
                    android:orientation="horizontal"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
           
                        android:src="@drawable/eventback" />

                    <TextView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/back_text_left_margin"
                
                        android:text="@string/back"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/eventdetail_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.38"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/calender_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#232323"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/calenderImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                  
                        android:src="@drawable/date" />

                    <TextView
                        android:id="@+id/eventDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/back_text_left_margin"
             
                        android:text="Aug 12"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/eventdetail_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.28" >

                <LinearLayout
                    android:id="@+id/time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#232323"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/time_ImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
              
                        android:src="@drawable/eventtime" />

                    <TextView
                        android:id="@+id/eventtimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/back_text_left_margin"
           
                        android:text="8:30"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/eventdetail_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.27" >

            <RelativeLayout
                android:id="@+id/belowtext_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/belowtext_layout_left_margin"
                android:layout_marginRight="@dimen/belowtext_layout_left_margin"
                android:layout_marginTop="@dimen/belowtext_layout_top_margin" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <com.partyfinder.CustomView.CustomFontSemiBold
                        android:id="@+id/companyNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surrender"
                        android:textColor="#a6a6a6"
                        android:textSize="@dimen/surrender_text_size"
                        android:textStyle="bold" />

                    <com.partyfinder.CustomView.CustomFontRegular
                        android:id="@+id/eventNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/northern_light_top_margin"
                        android:text="Northern Light"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/northern_Light_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/locationlayout_top_margin"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/location" />

                        <com.partyfinder.CustomView.CustomFontRegular
                            android:id="@+id/addrTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/locationlayout_top_margin"
                            android:text="Los Angeles ,CA"
                            android:textColor="#83837d"
                            android:textSize="@dimen/losangeles_text_size" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:overScrollMode="never"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:scrollbars="none" >

                        <com.partyfinder.CustomView.CustomFontRegular
                            android:id="@+id/eventDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingBottom="2dp"
                            android:text="Located at 16th L streets,the small plate restaurant and lounge creates an inviting social scene with a roof top Located at 16th L streets,the small plate restaurant and lounge creates an inviting social scene with a roof top"
                            android:textColor="#4d4d4d"
                            android:textSize="@dimen/last_text_size" />
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
    
</RelativeLayout>