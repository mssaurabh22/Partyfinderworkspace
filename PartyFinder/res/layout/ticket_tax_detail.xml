<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ordersummary_itemlayout_height" >

    <RelativeLayout
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ordersummary_itemlayout_height"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/convenceTaxlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0px"
            android:text="@string/Convence_fees"
            android:textColor="@color/listview_edittext1_text_colour"
            android:textSize="@dimen/orderTicketConfirmation_ticketOrderCode_detailtextSize" />

        <TextView
            android:id="@+id/conveceTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0px"
            android:textColor="#ffffff"
            android:textSize="@dimen/order_history_listView_item_text_TextSize" />
    </RelativeLayout>

</LinearLayout>