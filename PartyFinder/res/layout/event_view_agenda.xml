<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1" >

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/weight_header" >
            
            <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <com.partyfinder.CustomView.CustomFontSemiBold
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:layout_centerHorizontal="true"
           		android:layout_centerVertical="true"
                android:text="@string/Events"
                 android:textColor="@color/layout_top_heading_color"
                android:textSize="@dimen/All_screen_header_text_size"
                android:textStyle="bold" />

              <RelativeLayout 
                          android:id="@+id/backButton_layout"
                    android:layout_height="match_parent"
                    android:layout_width="80dp"
                    android:layout_alignParentLeft="true">
          <ImageButton
                android:id="@+id/backBtnViewAgenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:background="#00000000"
                android:layout_marginLeft="@dimen/header_globe_icon_margin_top"
                android:layout_alignParentLeft="true"
           
                android:src="@drawable/backbtn" />
</RelativeLayout>
            <ImageButton
                android:id="@+id/img_SearchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:background="#00000000"
                android:layout_marginRight="@dimen/header_globe_icon_margin_top"
                android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
                android:src="@drawable/searchicon" />
           

<TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b2b2b2" 
        android:layout_alignParentBottom="true"/>
        

</RelativeLayout>
                
  </LinearLayout>
  
        
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.89"
            android:orientation="vertical" >
              <RelativeLayout
       android:id="@+id/layouts_search"

       android:layout_width="match_parent"
             android:layout_height="@dimen/bottam_SearchBar_hight"
                android:background="#f9f9f7"
       android:orientation="horizontal"
       android:visibility="gone"
       >
        
       <ImageView
           android:id="@+id/tv_cancle"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_alignTop="@+id/imgViewReset"
           android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/search"
           android:background="@drawable/searchicon"
           android:scaleType="fitXY"
           android:layout_marginLeft="14dp"
           />

       <EditText
           android:id="@+id/etEventsearch"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/tv_cancle"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:background="#f9f9f7"
           android:cursorVisible="true"
           android:ems="11"
           android:textSize="@dimen/searchBar_textsize"
           android:focusable="true"
           android:inputType="text" />

       <ImageView
           android:id="@+id/imgViewReset"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="14dp"
           android:background="@drawable/resetfiltering"
           android:scaleType="fitXY" />

       
       
        <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b2b2b2"
        android:layout_alignParentBottom="true" />
   </RelativeLayout>
   
         
              
              
              
              
                  <RelativeLayout
                      
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

         <ProgressBar
             android:id="@+id/progressBarLoadEvent"
             android:layout_width="@dimen/hdpi_progressBar_height"
             android:layout_height="@dimen/hdpi_progressBar_height"
             android:layout_centerInParent="true"
             android:visibility="gone" />
         
         <ListView 
           
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/eventViewAgendaListView"
           android:divider="@drawable/eventsdivider"
          
           android:overScrollMode="never"
           android:scrollbars="none">
        	
           
     </ListView>
<!--  tools:listitem="@layout/cstm_listview_for_event_layout" -->
        </RelativeLayout>
    
                
  </LinearLayout>
        
</LinearLayout>

    </RelativeLayout>
