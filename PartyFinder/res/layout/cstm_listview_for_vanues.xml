<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
          <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
    
        
      
        android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.23"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center" >

            <RelativeLayout
              android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                          android:id="@+id/im_vc_image_url"
                    android:layout_width="@dimen/upcoming_event_image_width"
                    android:layout_height="@dimen/upcoming_event_image_height"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/event_image" />

                <ProgressBar
                android:id="@+id/smallProgressBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical" >

            
              <RelativeLayout
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          
     
           >

            <com.partyfinder.CustomView.CustomFontLight
                android:id="@+id/surrender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/upcoming_text4_margin_top"
                android:text="surrender"
                android:textColor="@color/GreenPartyFinderGreen"
                android:textSize="@dimen/upcoming_text2_size" />

            <com.partyfinder.CustomView.CustomFontLight
                android:id="@+id/tv_vc_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surrender"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/upcoming_text2_top"
                android:singleLine="true"
                android:text="J.Cole Birthday Celebration"
                android:textColor="#626262"
                android:textSize="@dimen/upcoming_text1_4_size" />

            <LinearLayout
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_vc_event_name"
                android:layout_marginTop="@dimen/upcoming_text3_layout_top"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="@dimen/upcoming_location_icon_margin_top"
                    android:src="@drawable/location" />

                <com.partyfinder.CustomView.CustomFontLight
                    android:id="@+id/tv_vc_event_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/upcoming_tex3_4_left"
                    android:text="Banilad, Cebu, Philippines"
                    android:textColor="#626262"
                    android:singleLine="true"
                    android:textSize="@dimen/upcoming_text3_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview3"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="@dimen/upcoming_text4_layout_top"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dateicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/upcomingdateg" />

                <com.partyfinder.CustomView.CustomFontSemiBold
                    android:id="@+id/tv_dt_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/upcoming_tex3_4_left"
                    android:layout_toRightOf="@+id/dateicon"
                    android:text="November 24"
                    android:textColor="#626262"
                    android:textSize="@dimen/upcoming_text1_4_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textview4"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="@dimen/upcoming_text4_layout_top"
                android:layout_toRightOf="@+id/textview4"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/icontime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/time" />

                <com.partyfinder.CustomView.CustomFontSemiBold
                    android:id="@+id/tv_dt_event_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/upcoming_tex3_4_left"
                    android:layout_toRightOf="@+id/icontime"
                    android:singleLine="true"
                    android:text="8:30pm"
                    android:textColor="#626262"
                    android:textSize="@dimen/upcoming_text1_4_size" />
            </RelativeLayout>

            

        </RelativeLayout>
        
        </LinearLayout>
    </LinearLayout>
     </LinearLayout>

</RelativeLayout>