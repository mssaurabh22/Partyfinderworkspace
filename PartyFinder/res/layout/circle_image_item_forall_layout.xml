<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_activityfeed_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/circularImageView_forAll_layout_height"
        android:layout_marginLeft="@dimen/circularImageView_forAll_layout_marginLeft"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/user_image_layout"
            android:layout_width="@dimen/circularImageView_forAll_layout_Imageheight"
            android:layout_height="@dimen/circularImageView_forAll_layout_Imageheight"
            android:layout_centerVertical="true"
            android:background="@drawable/imagebg"
            android:padding="4dp" >

            <com.partyfinder.CustomView.ImageViewRounded
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:focusable="true" />

            <ProgressBar
                android:id="@+id/imageLoadproBarAcFeed"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/circularImageView_forAll_layout_textMarginLeft"
            android:layout_marginRight="@dimen/circularImageView_forAll_layout_textMarginRight"
            android:layout_toRightOf="@+id/user_image_layout"
            android:text=""
            android:textSize="@dimen/circularImageView_forAll_layout_textSize" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="15 mins"
            android:textColor="#ADADAD"
            android:textSize="@dimen/circularImageView_forAll_layout_textSize2" />
    </RelativeLayout>

    <!-- Friends -->

    <RelativeLayout
        android:id="@+id/layout_friendList_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/circularImageView_forAll_layout_height"
        android:layout_below="@+id/layout_activityfeed_item"
        android:paddingLeft="@dimen/circularImageView_forAll_layout_marginLeft"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/round"
            android:layout_width="@dimen/circularImageView_forAll_layout_Imageheight"
            android:layout_height="@dimen/circularImageView_forAll_layout_Imageheight"
            android:layout_centerVertical="true"
            android:background="@drawable/imagebg"
            android:padding="2dp" >

            <!-- com.partyfinder.CustomView.ImageViewRounded -->

            <com.partyfinder.CustomView.ImageViewRounded
                android:id="@+id/imageView_user_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/round"
            android:text="frend name"
            android:textColor="#04B4AE"
            android:textSize="@dimen/circularImageView_forAll_layout_textSize3" />
    </RelativeLayout>

</RelativeLayout>