<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:gravity="center" >

                <RelativeLayout
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/eventImage"
                        android:layout_width="@dimen/upcoming_event_image_width"
                        android:layout_height="@dimen/upcoming_event_image_height"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/event_image" />

                    <ProgressBar
                        android:id="@+id/imageLoadingProgressBar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.68"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <com.partyfinder.CustomView.CustomFontRegular
                        android:id="@+id/club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/upcoming_text4_margin_top"
                        android:text="surrender"
                        android:textColor="#a6a6a6"
                        android:textSize="@dimen/newUpcomingText1size" />

                    <com.partyfinder.CustomView.CustomFontRegular
                        android:id="@+id/party_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/club_name"
                        android:layout_marginTop="@dimen/upcoming_text2_top"
                        android:singleLine="true"
                        android:text="J.Cole Birthday Celebration"
                        android:textColor="#4a4a4a"
                        android:textSize="@dimen/newUpcomingText2size" />

                    <LinearLayout
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/party_name"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="@dimen/upcoming_text3_layout_top"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/location" />

                        <com.partyfinder.CustomView.CustomFontRegular
                            android:id="@+id/club_location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/upcoming_tex3_4_left"
                            android:singleLine="true"
                            android:text="Banilad, Cebu, Philippines"
                            android:textColor="#83837d"
                            android:textSize="@dimen/newUpcomingText3size" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="@dimen/upcoming_text4_layout_top"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/dateicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/dateevent" />

                        <com.partyfinder.CustomView.CustomFontRegular
                            android:id="@+id/month_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/upcoming_tex3_4_left"
                            android:layout_toRightOf="@+id/dateicon"
                            android:text="November 24"
                            android:textColor="#83837d"
                            android:textSize="@dimen/newUpcomingText4size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textview4"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="13px"
                        android:layout_toRightOf="@+id/textview4"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/icontime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/time" />

                        <com.partyfinder.CustomView.CustomFontRegular
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/upcoming_tex3_4_left"
                            android:layout_toRightOf="@+id/icontime"
                            android:singleLine="true"
                            android:text="8:30pm"
                            android:textColor="#83837d"
                            android:textSize="@dimen/newUpcomingText4size" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>