<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/weight_header" >

                <RelativeLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/btnarrowwhite"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/backButton_layout"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true" >

                        <ImageButton
                            android:id="@+id/VenueDetail_btn_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:background="@drawable/backbtn" />
                    </RelativeLayout>

                    <com.partyfinder.CustomView.CustomFontSemiBold
                        android:id="@+id/upcomingeventheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/venuesDetail"
                        android:textColor="@color/layout_top_heading_color"
                        android:textSize="@dimen/All_screen_header_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#cccec3" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.06" >

                <RelativeLayout
                    android:id="@+id/textViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/headerLayout"
                    android:background="@drawable/namebg" >

                    <!-- 61px -->

                    <com.partyfinder.CustomView.CustomFontRegular
                        android:id="@+id/tV_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/venue_detail_venue_name_margin_left"
                        android:text="She Rocks"
                        android:textColor="#42b49a"
                        android:textSize="@dimen/venue_detail_venue_name_textsize" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:gravity="center" >

                <RelativeLayout
                    android:id="@+id/imageViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
         
                    android:background="@color/White" >

                    <ImageView
                        android:id="@+id/imV_Venue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/eeeeeeeeeee" />

                    <ProgressBar
                        android:id="@+id/progress_VenueDetail"
                        android:layout_width="@dimen/hdpi_progressBar_height"
                        android:layout_height="@dimen/hdpi_progressBar_height"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/venueDescLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewLayout"
                    android:background="#232323" >

                    <RelativeLayout
                        android:id="@+id/descLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/venue_detail_venue_location_telephone_layout_margin_top_left"
                        android:layout_marginTop="@dimen/venue_detail_venue_location_telephone_layout_margin_top_left" >

                        <ImageView
                            android:id="@+id/locationIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/locationvenue" />

                        <com.partyfinder.CustomView.CustomFontRegular
                            android:id="@+id/tv_countryv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/venue_detail_location_text_left"
                            android:layout_toRightOf="@+id/locationIcon"
                            android:text="1525 L St Sacramento, CA 95814"
                            android:textColor="#626262"
                            android:textSize="@dimen/venue_detail_desctext_textsize" />

                        <ImageView
                            android:id="@+id/phoneIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/locationIcon"
                            android:layout_marginTop="@dimen/venue_detail_telephone_icon_top"
                            android:src="@drawable/phone" />

                        <com.partyfinder.CustomView.CustomFontRegular
                            android:id="@+id/tv_telephone_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_countryv"
                            android:layout_marginLeft="@dimen/venue_detail_location_text_left"
                            android:layout_marginTop="@dimen/venue_detail_location_text_top"
                            android:layout_toRightOf="@+id/phoneIcon"
                            android:text="9999999999"
                            android:textColor="#626262"
                            android:textSize="@dimen/venue_detail_desctext_textsize" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/descLayout"
                        android:layout_marginLeft="@dimen/venue_detail_divider_margin_top_left"
                        android:layout_marginRight="@dimen/venue_detail_divider_margin_top_left"
                        android:layout_marginTop="@dimen/venue_detail_divider_margin_top_left"
                        android:scaleType="fitXY"
                        android:src="@drawable/dividerline" />
                </RelativeLayout>

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/viewAgendaLayout"
                    android:layout_below="@+id/venueDescLayout"
                    android:background="#232323"
                    android:overScrollMode="never"
                    android:paddingBottom="5dp"
                    android:paddingRight="@dimen/venue_detail_venue_location_telephone_layout_margin_top_left"
                    android:paddingTop="@dimen/venue_detail_divider_margin_top_left"
                    android:scrollbars="none" >

                    <com.partyfinder.CustomView.CustomFontRegular
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/descLayout"
                        android:layout_marginLeft="@dimen/venue_detail_venue_location_telephone_layout_margin_top_left"
                        android:text="TTttttttttttt"
                        android:textColor="#626262"
                        android:textSize="@dimen/venue_detail_desctext_textsize2" />
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085" >

                <RelativeLayout
                    android:id="@+id/viewAgendaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
         
                    android:background="#e74f64" >

                    <com.partyfinder.CustomView.CustomFontRegular
                        android:id="@+id/btn_View_Agenda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/viewAgenda"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/venue_detail_view_agenda_textsize" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.085"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                          android:gravity="center" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
     
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/recommend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/foldericon" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33" 
                          android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/icn_favourite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/star" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33" 
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
             
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/vanueLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/tv_totallike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/like"
                            android:text="1.2k"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/venue_detail_total_like_textsize" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>