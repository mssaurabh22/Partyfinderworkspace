<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linear_layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/loginProgbar"
            android:layout_width="@dimen/hdpi_progressBar_height"
            android:layout_height="@dimen/hdpi_progressBar_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/weight_header" >

                <RelativeLayout
                    android:id="@+id/l"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/img_Loginbck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pfsingup_backBtn_leftMargin"
                        android:background="#00000000"
                        android:src="@drawable/backbtn" />

                    <com.partyfinder.CustomView.CustomFontSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/login"
                        android:textColor="@color/layout_top_heading_color"
                        android:textSize="@dimen/All_screen_header_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvv"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#b2b2b2" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.04" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.85" >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight=".08"
                            android:background="@drawable/inputbackgroundgray" >

                            <com.partyfinder.CustomView.CustomEditText
                                android:id="@+id/et_user_email"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/inputbackgroundgray"
                                android:hint="Nome de usuÃ¡rio"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="@dimen/pfsingup_editText_leftPadding"
                                android:singleLine="true"
                                android:textColor="@color/Signup_input_color"
                                android:textColorHint="@color/Registration_edittext_hint_color"
                                android:textSize="@dimen/pfsingup_editText_textSize" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".03" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight=".08"
                            android:background="@drawable/inputbackgroundgray" >

                            <com.partyfinder.CustomView.CustomEditText
                                android:id="@+id/et_user_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/inputbackgroundgray"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:paddingLeft="@dimen/pfsingup_editText_leftPadding"
                                android:singleLine="true"
                                android:textColor="@color/Signup_input_color"
                                android:textColorHint="@color/Registration_edittext_hint_color"
                                android:textSize="@dimen/pfsingup_editText_textSize" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".04" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight=".08" >

                            <com.partyfinder.CustomView.CustomButtonView
                                android:id="@+id/btn_user_login"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/registerbtn"
                                android:text="@string/login"
                                android:textColor="@color/Signup_Registerbtn_text_color"
                                android:textSize="@dimen/pfsingup_registerBtn_textSize" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".6" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".04"
                            android:gravity="center" >

                            <com.partyfinder.CustomView.CustomTextView
                                android:id="@+id/tv_forgotPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/forgotPassword"
                                android:textColor="@color/TextView_background"
                                android:textSize="@dimen/login_forgetBtn_TextSize" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- here is linear layout for forgot password -->
    <!-- here is linear layout for forgot password -->
    <!-- here is linear layout for forgot password -->

    <LinearLayout
        android:id="@+id/linear_layout_forgotpass"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".09"
            android:background="@drawable/inputbackgroundgray" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_frogetbcack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/pfsingup_backBtn_leftMargin"
                    android:src="@drawable/backbtn" />

                <com.partyfinder.CustomView.CustomFontSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/forgotPassword"
                    android:textColor="@color/layout_top_heading_color"
                    android:textSize="@dimen/All_screen_header_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvvv"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#b2b2b2" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".06" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".08"
            android:background="@drawable/inputbackgroundgray" >

            <com.partyfinder.CustomView.CustomEditText
                android:id="@+id/eT_forgetpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/inputbackgroundgray"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/pfsingup_editText_leftPadding"
                android:textColor="@color/Signup_input_color"
                android:textSize="@dimen/pfsingup_editText_textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".03" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".08" >

            <Button
                android:id="@+id/btn_forgetpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/registerbtn"
                android:text="@string/send"
                android:textColor="@color/Signup_Registerbtn_text_color"
                android:textSize="@dimen/pfsingup_registerBtn_textSize" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarForgetpass"
        android:layout_width="@dimen/hdpi_progressBar_height"
        android:layout_height="@dimen/hdpi_progressBar_height"
        android:layout_below="@+id/linear_layout_forgotpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:visibility="gone" />

</RelativeLayout>